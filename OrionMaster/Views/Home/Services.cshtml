    <button class="btn filter-button mx-1" data-filter="FoodDelivery">Food & Delivery</button>
    <button class="btn filter-button mx-1" data-filter="OtherServices">Other Services</button>-->
    </div>

    <div class="row mx-0 ser-row">
        @foreach (ServiceData item in Model.Servicedata)
        {
            <div class="gallery_product px-2 col-md-3 col-6 mb-3 filter @item.Category" >
                <div class="card">
                    <img class="card-img-top" src=@item.SerImg alt="">
                    <div class="card-body p-2">
                        <div class="s-name py-1">
                            <span class="primary-txt fs-16 f_B line-1-3">@item.Subject</span>
                        </div>
                        <p class="card-text h-2 fs-14 mb-0 line-1-2 text-center">@item.Body</p>
                    </div>

                </div>
            </div>
        }


    </div>



</div>


@model OrionServices
    
    <!-- Section Services -->
<div class="services pb-5">
    <div class="text-center mb-4 pt-5 mt-4">
        <h1 class="primary-txt fs-32 f_B">@Model.Title @*Orion Services*@</h1>
        <p class="dark-txt fs-16">@Model.Desc @*You can inquire about monthly bill by card number*@</p>
    </div>

    <div class="d-flex justify-content-md-center mt-4 pt-2 filter-services">

        @foreach (ServiceTypes item in Model.Servicetypes)
        {
            if (item.FilterName == "all")
            {
    <button class="btn filter-button mx-1 active" data-filter=@item.FilterName>@item.DisplayName</button> }
                    else
                    {
                        <button class="btn filter-button mx-1" data-filter=@item.FilterName>@item.DisplayName</button>
                    }
                }

        <!--<button class="btn filter-button mx-1 active" data-filter="all">All Services</button>

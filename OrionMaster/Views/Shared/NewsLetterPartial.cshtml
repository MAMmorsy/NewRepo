@model NewsLetterSub

<form asp-action="Create" asp-controller="NewsLetterSubs" id="myform"
      data-ajax="true" data-ajax-method="POST"
                                 data-ajax-mode="replace" data-ajax-update="#myform">

    <h5>Subscribe to receive newsletters and notifications</h5>
    <div class="form-group">

        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <input asp-for="Email" id="txtEmail" class="form-control" placeholder="Type Your Email" aria-describedby="helpId" />
        <span id="lblError" class="text-danger"></span>
        @*<input type="text" name="" id="" class="form-control" placeholder="Type Your Email" aria-describedby="helpId">*@
        <button type="submit" class="btn send-btn">
            <i class="la la-send"></i>
        </button>
        <span id="lblError" class="text-danger">@ViewData["errorMsg"]</span>
    </div>
</form>